<?xml version="1.0"?>
<block>
  <name>Video Source</name>
  <key>applications_video_source</key>
  <category>[applications]</category>
  <import>import applications</import>
  <make>applications.video_source($fname,$fps)</make>
  <callback>set_fname($fname)</callback>
  <callback>set_resend($button)</callback>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>File Name</name>
    <key>fname</key>
    <value></value>
    <type>file_open</type>
  </param>
  <param>
    <name>Resend</name>
    <key>button</key>
    <value>False</value>
    <type>bool</type>
  </param>
  <param>
    <name>Frame Per Second</name>
    <key>fps</key>
    <value>40</value>
    <type>int</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>bytes_out</name>
    <type>message</type>
  </source>
</block>
